<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Ihatud.AdminLoginPage"
    Title="Admin Login"
    BackgroundColor="White">

    <VerticalStackLayout  Spacing="20" Padding="30" WidthRequest="320">
        <Label Text="Admin Login" FontSize="28" HorizontalOptions="Center" />

        <Entry x:Name="emailEntry" Placeholder="Email" BackgroundColor="White" TextColor="Black" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" BackgroundColor="White" TextColor="Black"  />

        <Button Text="Login" BackgroundColor="#007bff" TextColor="White" Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>
