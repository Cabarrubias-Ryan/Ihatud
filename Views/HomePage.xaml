<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ihatud.HomePage"
             Title="Home"
             BackgroundColor="White">

    <Grid x:Name="MainGrid">

        <!-- Sidebar Menu -->
        <StackLayout x:Name="Sidebar"
                     BackgroundColor="LightGray"
                     WidthRequest="200"
                     Padding="0"
                     IsVisible="False"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="Start"
                     ZIndex="2">
            <Label Text="Menu"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="10,20,0,10"/>
            <Button Text="Home"
                    Clicked="OnHomeClicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Padding="0"
                    Margin="0"/>
            <Button Text="Track Delivery"
                    x:Name="trackDeliveryButton"  
                    Clicked="OnTrackDeliveryClicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Padding="0"
                    Margin="0"/>
            <Button x:Name="addProductButton"
                    Text="Add Product (Admin Only)"
                    Clicked="OnAddProductClicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Padding="0"
                    Margin="0"/>
            <Button x:Name="viewUsersButton"
                    Text="View Users (Admin Only)"
                    Clicked="OnViewUsersClicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Padding="0"
                    Margin="0"/>
            <Button Text="Logout"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Padding="0"
                    Margin="0"/>
        </StackLayout>

        <!-- Overlay Background when Sidebar is open -->
        <BoxView x:Name="SidebarOverlay"
                 BackgroundColor="Black"
                 Opacity="0.3"
                 IsVisible="False"
                 InputTransparent="False"
                 ZIndex="1">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Main Content -->
        <Grid RowDefinitions="Auto,*,Auto"
              Padding="10"
              ZIndex="0">
            <!-- Top Bar -->
            <Grid ColumnDefinitions="Auto,*">
                <Button Text="â˜°"
                        FontSize="24"
                        BackgroundColor="Black"
                        TextColor="White"
                        Clicked="OnMenuClicked"/>
                <Label Text="Dashboard"
                       TextColor="White"
                       FontSize="24"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Grid.Column="1"/>
            </Grid>

            <!-- Main Body -->
            <VerticalStackLayout Grid.Row="1"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="20">

                <!-- Scrollable list of food products -->
                <ScrollView VerticalOptions="FillAndExpand">
                    <StackLayout Spacing="10"
                        Padding="20">
                        <!-- Sample Product 1 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 1" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$10.99" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Sample Product 2 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 2" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$12.49" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Sample Product 3 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 3" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$8.79" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Sample Product 4 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 4" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$15.99" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Sample Product 5 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 5" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$9.49" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Sample Product 6 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 6" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$11.89" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Sample Product 7 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 7" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$14.29" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Sample Product 8 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 8" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$7.99" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Sample Product 9 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 9" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$18.59" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Sample Product 10 -->
                        <Frame BorderColor="Gray" Padding="10" CornerRadius="5">
                            <HorizontalStackLayout Spacing="20">
                                <Label Text="Product 10" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="$13.49" FontSize="16" VerticalOptions="Center"/>
                                <Button Text="Order" Clicked="OnOrderClicked" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </StackLayout>
                </ScrollView>

            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
