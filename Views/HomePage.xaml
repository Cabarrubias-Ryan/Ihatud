<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ihatud.HomePage"
             Title="Home"
             BackgroundColor="White">

    <Grid x:Name="MainGrid">

        <!-- Sidebar Menu -->
        <StackLayout x:Name="Sidebar"
                     BackgroundColor="LightGray"
                     WidthRequest="200"
                     Padding="0"
                     IsVisible="False"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="Start"
                     ZIndex="2">
            <Label Text="Menu"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="10,20,0,10"/>
            <Button Text="Home"
                    Clicked="OnHomeClicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Padding="0"
                    Margin="0"/>
            <Button Text="View Orders"
                    x:Name="trackDeliveryButton"  
                    Clicked="OnTrackDeliveryClicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Padding="0"
                    Margin="0"/>
           
            <Button x:Name="viewUsersButton"
                    Text="View Users (Admin Only)"
                    Clicked="OnViewUsersClicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Padding="0"
                    Margin="0"/>
            <Button Text="Logout"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Padding="0"
                    Margin="0"/>
        </StackLayout>

        <!-- Overlay Background when Sidebar is open -->
        <BoxView x:Name="SidebarOverlay"
                 BackgroundColor="Black"
                 Opacity="0.3"
                 IsVisible="False"
                 InputTransparent="False"
                 ZIndex="1">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Main Content -->
        <Grid RowDefinitions="Auto,*,Auto"
              Padding="10"
              ZIndex="0">
            <!-- Top Bar -->
            <Grid ColumnDefinitions="Auto,*">
                <Button Text="â˜°"
                        FontSize="24"
                        BackgroundColor="Black"
                        TextColor="White"
                        Clicked="OnMenuClicked"/>
                <Label Text="Dashboard"
                       TextColor="White"
                       FontSize="24"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Grid.Column="1"/>
            </Grid>

            <!-- Main Body -->
            <VerticalStackLayout Grid.Row="1"
                                 VerticalOptions="FillAndExpand"
                                 HorizontalOptions="Center"
                                 Spacing="20"
                                 Padding="20">
                <Label Text="Welcome to the Food Delivery App"  
                       FontSize="24"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>

                <!-- Scrollable product list using CollectionView -->
                <CollectionView x:Name="FoodProductCollectionView"
                                VerticalOptions="FillAndExpand"
                                Margin="0"
                                ItemsLayout="VerticalList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="Gray"
                                Padding="10"
                                CornerRadius="5"
                                Margin="0,5">
                                <HorizontalStackLayout Spacing="20"
                                                    Padding="30">
                                    <Label Text="{Binding Name}"
                                        FontSize="16"
                                        VerticalOptions="Center"/>
                                    <Label Text="{Binding Price, StringFormat='${0:N2}'}"
                                        FontSize="16"
                                        VerticalOptions="Center"/>
                                    <Button Text="Order"
                                            Clicked="OnOrderClicked"
                                            VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
