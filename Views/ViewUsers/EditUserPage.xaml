<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ihatud.Views.ViewUsers.EditUserPage"
             Title="Edit User"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20">
        <Label Text="Edit User"
               FontSize="24"
               HorizontalOptions="Center" />

        <Entry x:Name="FullNameEntry" Placeholder="Full Name" />
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="PhoneNumberEntry" Placeholder="Phone Number" />

        <Button Text="Save Changes" Clicked="OnSaveChangesClicked" />
    </VerticalStackLayout>
</ContentPage>
